//- include ../icon-inline/template
include ../menu-block/template
include ../nav-block/template
include ../search-block/template
include ../burger/template

mixin header(data)
	header.header&attributes(attributes)
		._body
			._container.container
				._logo-wrap
					a(href="#")._logo
						img(src="images/logo.png", alt="logo")
					._slogan Интернет магазин керамической плитки
				._body-content
					a(href="#")._item 
						img(src="images/call.png", alt="")
						._item-slogan Обратная связь
					._numbers
						._number
							+svg('phone')
							span +38 (044) 111-11-11
						._number
							+svg('lifecell')
							span +38 (044) 111-11-11
						a(href="#")._number
							+svg('viber')
							span Viber
						._number
							+svg('kyivstar')
							span +38 (044) 111-11-11
						._number
							+svg('vodafon')
							span +38 (044) 111-11-11
						a(href="#")._number
							+svg('telegram')
							span Telegram
					._user
						a(href="#")._language-link
							+svg('earth')
							span UA
						a(href="#")._user-link
							+svg('user')


					
					
						
		._bottom 
			._container.container 
				//- +burger()._burger   
					
				._menu
					a(href="#").btn Каталог продукции
					+searchBlock({
						placeholder: 'введите артикул или бренд плитки'
					})
					//- +menuBlock() 
				+navBlock()
						

